{
  "name": "hackernews",
  "author": "let webDeveloper",
  "description": "A Hacker News client written in Vue3",
  "version": "0.0.5",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "VITE_LAUNCHING_ELECTRON='true' vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "push": "npm run build && git add -A && git commit && git push",
    "bump": "./scripts/setVersionNumber.sh --bump",
    "setVersionNumber": "./scripts/setVersionNumber.sh",
    "build:apk": "npm run sync && npm run build:apk-only",
    "sync": "npm run build && npm run sync-only",
    "build:apk-only": "source './.env' && cd ${CAPACITOR_ANDROID_PATH} && chmod +x ./gradlew && ./gradlew assembleDebug",
    "sync-only": "cap sync",
    "setUp:electron": "npm install --save-dev electron electron-builder",
    "setUp:electron-noSave": "npm install --no-save electron electron-builder",
    "pack:electron": "electron-builder --dir",
    "build:electron": "npm run build && npm run build:electron-only",
    "build:electron:linux": "npm run build && npm run build:electron:linux-only",
    "build:electron:windows": "npm run build && npm run build:electron:windows-only",
    "build:electron-only": "electron-builder --publish never",
    "build:electron:linux-only": "electron-builder --linux --publish never",
    "build:electron:windows-only": "electron-builder --windows --publish never"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@vueuse/core": "^10.7.2",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.3",
    "echarts": "^5.4.3",
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-echarts": "^6.6.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.18",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.2",
    "vite-plugin-electron": "^0.28.2",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  }
}
