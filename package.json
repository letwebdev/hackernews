{
  "name": "hackernews",
  "author": "let webDeveloper",
  "description": "A Hacker News client written in Vue3",
  "version": "0.0.7",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "push": "npm run build && git add -A && git commit && git push",
    "bump": "./scripts/setVersionNumber.sh --bump",
    "setVersionNumber": "./scripts/setVersionNumber.sh",
    "build:apk": "npm run sync && npm run build:apk-only",
    "sync": "npm run build && npm run sync-only",
    "build:apk-only": "bash -c 'source './.env' && cd ${CAPACITOR_ANDROID_PATH} && chmod +x ./gradlew && ./gradlew assembleDebug'",
    "sync-only": "cap sync",
    "prepare": "husky",
    "lint:staged": "npx lint-staged"
  },
  "dependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@unocss/transformer-variant-group": "^0.61.0",
    "@vueuse/core": "^10.11.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "pinia": "^2.1.7",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3",
    "vuetify": "^3.6.9"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "@iconify-json/mdi": "^1.1.66",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.4",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@unocss/eslint-config": "^0.61.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^5.4.5",
    "unocss": "^0.61.0",
    "unplugin-auto-import": "^0.17.6",
    "vite": "^5.3.1",
    "vite-plugin-vuetify": "^2.0.3",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.21"
  }
}
